  description="Order delicious burgers, fries, and more. Fast delivery, fresh ingredients, unbeatable taste."
>
  <!-- Hero Section -->
  <section class="relative bg-linear-to-r from-red-600 to-red-700 text-white">
    <div class="container mx-auto px-4 py-20 md:py-32">
      <div class="max-w-3xl">
